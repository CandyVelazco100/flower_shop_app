<link rel="stylesheet" href="css/style-sales.css">

<Section>
  <!-- Lista de Ordenes -->
  <div class="container-output-custom mt-3 mb-3">
    <h1 class="pt-3 "><i class="fa-solid fa-table-list" style="color: #80c2af;"></i> - Lista de Ordenes</h1>
    <div class="table-responsive">
      <div class="row">
        <div class="col-md-12">
          <table class="table table-striped table-bordered align-middle text-center" id="product-table"
            style="overflow: sc;">
            <thead>
              <tr>
                <th>Id. Orden</th>
                <th>Id. Usuario</th>
                <th>Usuario del empleado</th>
                <th>Nombre del empleado</th>
                <th>Apellidos del empleado</th>
                <th>Estatus</th>
                <th>Cantidad Total</th>
                <th>Precio Total</th>
                <th>Fecha (Compra)</th>
                <th>Recibo</th>
              </tr>
            </thead>
            <tbody id="product-list">
                {{#each sales}}
                <tr>
                    <td>{{this.[0]}}</td>
                    <td>{{this.[1]}}</td>
                    <td>{{this.[2]}}</td>
                    <td>{{this.[3]}}</td>
                    <td>{{this.[4]}}</td>
                    <td>{{this.[5]}}</td>
                    <td>{{this.[6]}}</td>
                    <td>{{this.[7]}}</td>
                    <td>{{this.[8]}}</td>
                    <td><a href="sales/receipt/{{this.[0]}}" class="btn btn-success">Recibo</a></td>
                </tr>
                {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <!-- Lista de Ordenes -->
</Section>

<script src="js/script-sales.js"></script>