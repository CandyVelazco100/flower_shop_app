<link rel="stylesheet" href="/css/style-products.css">

<section>
    <!-- Formulario de Editar Producto -->
    <div class="container-input-custom">
        <h1 class="pt-2 mt-3"><i class="fa-solid fa-pen-to-square"></i> - Actualizar Producto</i></h1>
        <div class="row">
            <div class="col-md-12">
                <form id="product-form" action="/rest/products/edit" method="POST">
                    <input type="hidden" id="id" name="id" value="{{ product.id }}">
                    <div class="form-group mt-3">
                        <label for="product-name">Nombre:</label>
                        <input class="form-control" id="product-name" name="name" value="{{ product.name }}">
                    </div>
                    <div class="form-group mt-3">
                        <label for="product-description">Descripci√≥n:</label>
                        <input class="form-control" id="product-description" name="description" value="{{ product.description }}"
                            >
                    </div>
                    <div class="form-group mt-3">
                        <label for="product-price">Cantidad:</label>
                        <input class="form-control" id="product-quantity" name="quantity" value="{{ product.quantity }}" min="1"
                            max="9999" >
                    </div>
                    <div class="form-group mt-3">
                        <label for="product-alert-quantity">Alerta de Stock:</label>
                        <input class="form-control" id="product-alert-quantity" name="alert_quantity" value="{{ product.alert_quantity }}" min="1"
                            max="9999" >
                    </div>
                    <div class="form-group mt-3">
                        <label for="product-price">Precio:</label>
                        <input class="form-control" id="product-price" name="price" value="{{ product.price }}" min="1"
                            max="9999" >
                    </div>
                    <div class="form-group mt-3">
                        <label for="product-image-url">URL de Imagen (Opcional):</label>
                        <input class="form-control" id="product-image-url" name="url_image" value="{{ product.url_image }}"> 
                    </div>
                    <button type="submit" class="btn btn-success mt-3">Actualizar</button>
                    <a href="/rest/products/" class="btn btn-danger mt-3">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
    <!-- Formulario de Editar Producto -->
</section>

<script src="/js/script-products.js"></script>