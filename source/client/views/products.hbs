<link rel="stylesheet" href="css/style-products.css">

<Section>
    <div class="container-output-custom mt-3 mb-3">
        <h1 class="pt-3 mt-3"><i class="fa-solid fa-table-list" style="color: #80c2af;"></i> - Lista de Productos</h1>
        <div class="table-responsive">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-striped table-bordered align-middle text-center" id="product-table" style="overflow: sc;">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Descripci√≥n</th>
                                <th>Cantidad</th>
                                <th>Alerta de Stock</th>
                                <th>Precio Unitario</th>
                                <th>Imagen</th>
                            </tr>
                        </thead>
                        <tbody id="product-list">
                            {{#each products}}
                            <tr>
                              <td>{{this.[0]}}</td>
                              <td>{{this.[1]}}</td>
                              <td>{{this.[2]}}</td>
                              <td>{{this.[3]}}</td>
                              <td>{{this.[4]}}</td>
                              <td>{{this.[5]}}</td>
                              <td>{{this.[6]}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</Section>

<script src="js/script-products.js"></script>